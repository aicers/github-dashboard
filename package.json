    "clsx": "^2.1.1",
    "graphql-request": "^7.2.0",
    "lucide-react": "^0.544.0",
    "next": "15.5.3",
    "pg": "^8.16.3",
    "luxon": "^3.5.0",
    "recharts": "^2.12.7",
    "react": "19.1.0",
    "react-dom": "19.1.0",
    "react-hook-form": "^7.63.0",
    "tailwind-merge": "^3.3.1",
    "zod": "^4.1.11"
