# GitHub personal access token with read:user and metadata scopes
# Copy this file to .env and replace the value below.
GITHUB_TOKEN=ghp_example_token

# Name of the GitHub organization the collector will target.
GITHUB_ORG=your-org

# PostgreSQL connection string used by the dashboard APIs.
DATABASE_URL=postgres://username:passwd@localhost:5432/github_dashboard

# Minutes between automatic incremental sync runs. Defaults to 60 if unset.
SYNC_INTERVAL_MINUTES=60

# Name of the project used to calculate issue work time metrics.
TODO_PROJECT_NAME=to-do list
