# GitHub personal access token with read:user and metadata scopes
# Copy this file to .env and replace the value below.
GITHUB_TOKEN=ghp_example_token

# Name of the GitHub organization the collector will target.
GITHUB_ORG=your-org

# GitHub OAuth App credentials (see docs/github-oauth-app.md).
GITHUB_OAUTH_CLIENT_ID=github-oauth-client-id
GITHUB_OAUTH_CLIENT_SECRET=github-oauth-client-secret

# Organization whose members are allowed to sign in through GitHub OAuth.
GITHUB_ALLOWED_ORG=your-org
# Until an admin selects allowed teams or members in Settings â†’ Organization,
# only dashboard administrators can sign in.

# Comma-separated list of GitHub user IDs or logins with admin access to organization settings.
DASHBOARD_ADMIN_IDS=login1,login2

# Absolute base URL used to build OAuth callbacks (adjust per environment).
APP_BASE_URL=http://localhost:3000

# Secret used to sign and encrypt session cookies (generate with `openssl rand -hex 32`).
SESSION_SECRET=11111111111111111111111111111111

# PostgreSQL connection string used by the dashboard APIs.
DATABASE_URL=postgres://username:passwd@localhost:5432/github_dashboard

# Minutes between automatic incremental sync runs. Defaults to 60 if unset.
SYNC_INTERVAL_MINUTES=60

# Name of the project used to calculate issue work time metrics.
TODO_PROJECT_NAME=to-do list

# Optional comma-separated list of YYYY-MM-DD holidays excluded from response-time metrics.
HOLIDAYS=

# Prefetch window for the activity feed (number of pages buffered per request).
# Must be between 1 and 10; defaults to 3 when unset.
ACTIVITY_PREFETCH_PAGES=3

# Optional override for the prefetch token lifetime in seconds (default 300).
# ACTIVITY_PREFETCH_TOKEN_TTL_SECONDS=300
